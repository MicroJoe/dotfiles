# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 2

    color_good = "#B5BD68"
    color_degraded = "#DE935F"
    color_bad = "#CC6666"
}

order += "cpu_usage"
order += "disk /"
order += "ethernet enp0s25"
order += "volume master"
order += "battery 0"
order += "tztime local"

cpu_usage {
    format = " proc %usage "
}

disk / {
    format = " / %used "
}

volume master {
    format = " vol %volume "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
    format = " %H:%M "
}

ethernet enp0s25 {
    format_up = " eth %ip "
    format_down = " eth down "
}

# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 2

    color_good = "#B5BD68"
    color_degraded = "#DE935F"
    color_bad = "#CC6666"
}

order += "wireless wlp1s0"
order += "ethernet enp3s0"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "disk /"
order += "volume master"
order += "battery 0"
order += "tztime local"

cpu_usage {
    format = " proc %usage "
}

cpu_temperature 0 {
    format = " %degrees °C "
}

disk / {
    format = " / %used "
}

volume master {
    format = " vol %volume "
    format_muted = " muted "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
    format = " %H:%M "
}

ethernet enp3s0 {
    format_up = " eth %ip "
    format_down = " eth down "
}

wireless wlp1s0 {
    format_up = " wlan %quality %essid %ip "
    format_down = " wlan down "
}

battery 0 {
    format = " %status %percentage "
    format_down = " no bat "
    low_threshold = 10
}

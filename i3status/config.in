# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 2

    color_good = "#B5BD68"
    color_degraded = "#DE935F"
    color_bad = "#CC6666"
}

ifdef(`USE_WLAN',`dnl
order += "wireless WLAN_IFACE"
',)dnl
ifdef(`USE_LAN',`dnl
order += "ethernet LAN_IFACE"
',)dnl
order += "cpu_usage"
ifdef(`USE_CPU_TEMP',`dnl
order += "cpu_temperature 0"
',)dnl
order += "disk /"
order += "volume master"
ifdef(`USE_BATTERY',`dnl
order += "battery 0"
',)dnl
order += "tztime local"

cpu_usage {
    format = " proc %usage "
}

cpu_temperature 0 {
    format = " %degrees °C "
}

disk / {
    format = " / %used "
}

volume master {
    format = " vol %volume "
    format_muted = " muted "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
    format = " %H:%M "
}

ifdef(`USE_LAN',`dnl
ethernet LAN_IFACE {
    format_up = " eth %ip "
    format_down = " eth down "
}
',)dnl

ifdef(`USE_WLAN',`dnl
wireless WLAN_IFACE {
    format_up = " wlan %quality %essid %ip "
    format_down = " wlan down "
}
',)dnl

ifdef(`USE_BATTERY',`dnl
battery 0 {
    format = " %status %percentage "
    format_down = " no bat "
    low_threshold = 10
}
',)dnl
